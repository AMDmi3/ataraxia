# Description: JavaScript interpreter and libraries
# URL:         https://www.mozilla.org/js/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  autoconf2.13 python yasm zlib readline libffi nspr icu
# Section:     interpreters

name=spidermonkey60
version=60.8.0
release=1
source=("https://download.gnome.org/teams/releng/tarballs-needing-help/mozjs/mozjs-$version.tar.bz2")

build() {
	export SHELL=/bin/bash
	export PYTHON=/usr/bin/python3

	cd "$SRC"/mozjs-$version
	patch -Np1 -i "$STUFF"/spidermonkey60/0001-Port-build-to-python3.patch
	patch -Np1 -i "$STUFF"/spidermonkey60/0004-do-not-create-python-environment.patch
	patch -Np1 -i "$STUFF"/spidermonkey60/0008-add-riscv-support.patch
	patch -Np1 -i "$STUFF"/spidermonkey60/endian.patch

	cd "$SRC"
	mkdir build
	cd build

	"$SRC"/mozjs-$version/js/src/configure  \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-ctypes \
		--enable-pie \
		--enable-readline \
		--enable-shared-js \
		--enable-system-ffi \
		--disable-debug \
		--disable-debug-symbols \
		--disable-jemalloc \
		--disable-optimize \
		--disable-strip \
		--disable-tests \
		--host=$XTARGET \
		--target=$XTARGET
	make
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/lib/libjs_static.ajs
}
