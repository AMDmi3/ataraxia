# Description: Lightweight replacement for ncurses
# URL:         https://github.com/sabotage-linux/netbsd-curses
# Maintainer:  protonesso, nagakamira at gmail dot com
# Priority:    required
# Section:     libs

name=netbsd-curses
version=0.3.1
release=1
options=('bootstrap')
source=("http://ftp.barfooze.de/pub/sabotage/tarballs/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
cat << EOF > config.mak
CC=${CROSS_COMPILE}cc
HOSTCC=cc
AR=${CROSS_COMPILE}ar
RANLIB=${CROSS_COMPILE}ranlib
CFLAGS=-fPIC $CPPFLAGS $CFLAGS
PREFIX=/usr
DESTDIR="$PKG"
EOF

	make
	make install
	
	rm -rf "$PKG"/usr/share/man/man3/attr_get.3 "$PKG"/usr/share/man/man3/attr_set.3
}
